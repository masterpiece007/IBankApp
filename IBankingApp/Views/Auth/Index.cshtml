<div class="fixed-background"></div>
<main>
    <div class="container">
        <div class="row h-100">
            <div class="col-12 col-md-10 mx-auto my-auto">
                <div class="card auth-card">
                    <div class="position-relative image-side ">

                        <p class=" text-white h2">MAGIC IS IN THE DETAILS</p>

                        <p class="white mb-0">
                            Please use your credentials to login.
                            <br>If you are not a member, please
                            <a href="#" class="white">register</a>.
                        </p>
                    </div>
                    <div id="LoginDiv" class="form-side">
                        <a href="Dashboard.Default.html">
                            <span class="logo-single"></span>
                        </a>
                        <h6 class="mb-4">Login</h6>
                        <form id="LoginForm">
                            <label class="form-group has-float-label mb-4">
                                <input id="loginEmail" class="form-control" required/>
                                <span>E-mail</span>
                            </label>

                            <label class="form-group has-float-label mb-4">
                                <input id="loginPword" class="form-control" type="password" placeholder="" required/>
                                <span>Password</span>
                            </label>
                            <div class="d-flex justify-content-between align-items-center">
                                <a id="regLink" href="#">New User? Register</a>
                                <button id="btnLogin" class="btn btn-primary btn-lg btn-shadow" type="submit">LOGIN</button>
                            </div>
                        </form>
                    </div>
                    <div id="RegistrationDiv" class="form-side">
                        <a href="Dashboard.Default.html">
                            <span class="logo-single"></span>
                        </a>
                        <h6 class="mb-4">Register</h6>

                        <form id="RegForm">
                            <label class="form-group has-float-label mb-4">
                                <input class="form-control" id="firstName" />
                                <span>FirstName</span>
                            </label> 
                            <label class="form-group has-float-label mb-4">
                                <input class="form-control" id="lastName"/>
                                <span>LastName</span>
                            </label>
                            <label class="form-group has-float-label mb-4">
                                <input class="form-control" id="email"/>
                                <span>E-mail</span>
                            </label> 
                            <label class="form-group has-float-label mb-4">
                                <input class="form-control" id="accountNumber"/>
                                <span>Account No</span>
                            </label>
                            <label class="form-group has-float-label mb-4">
                                <input class="form-control" type="password" placeholder="" id="password"/>
                                <span>Password</span>
                            </label> 
                            <label class="form-group has-float-label mb-4">
                                <input class="form-control" type="password" placeholder="" id="confirmPassword" />
                                <span>Confirm Password</span>
                            </label>
                            <div class="d-flex justify-content-between align-items-center">
                                <a id="loginLink" href="#">Have an account? Login</a>
                                <button id="btnReg" class="btn btn-primary btn-lg btn-shadow" type="submit">REGISTER</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section scripts{
<script src="~/Scripts/jquery.auth.js"></script>    
    }
